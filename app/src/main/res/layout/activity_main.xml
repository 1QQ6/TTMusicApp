<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_local_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_toolbar"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/local_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地音乐"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toRightOf="@id/local_iv"
                app:layout_constraintTop_toTopOf="@id/local_iv"
                app:layout_constraintBottom_toBottomOf="@id/local_iv"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_recent_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_local_layout"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/recent_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/recently"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近音乐"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toRightOf="@id/recent_iv"
                app:layout_constraintTop_toTopOf="@id/recent_iv"
                app:layout_constraintBottom_toBottomOf="@id/recent_iv"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>